package com.example.demo.serviceimpl;

import com.example.demo.model.Company;
import com.example.demo.repository.CompanyRepository;
import com.example.demo.service.CompanyService;
import org.bson.types.ObjectId;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class CompanyServiceImpl implements CompanyService {

    @Autowired
    private CompanyRepository companyRepository;

    @Override
    public List<Company> getAllCompanies() {
        return companyRepository.findAll();
    }

    @Override
    public Company getCompanyById(String companyid) {
        // Validate if companyid is a valid ObjectId
        if (!ObjectId.isValid(companyid)) {
            return null; // Or throw a custom exception if preferred
        }
        return companyRepository.findById(companyid).orElse(null);
    }

    @Override
    public Company updateCompany(String companyid, Company company) {
        // Validate if companyid is a valid ObjectId
        if (!ObjectId.isValid(companyid)) {
            return null; // Or throw a custom exception if preferred
        }

        // Check if the company exists
        if (!companyRepository.existsById(companyid)) {
            return null; // Or throw a custom exception if preferred
        }

        company.setId(companyid); // Ensure the ID is set correctly
        return companyRepository.save(company);
    }

    @Override
    public Company createCompany(Company company) {
        // Ensure ID is not set if it's auto-generated by MongoDB
        if (company.getId() != null && ObjectId.isValid(company.getId())) {
            return null; // Or throw a custom exception if preferred
        }
        return companyRepository.save(company);
    }

    @Override
    public boolean deleteCompany(String companyid) {
        if (!ObjectId.isValid(companyid)) {
            return false; // Invalid ID format
        }
        if (companyRepository.existsById(companyid)) {
            companyRepository.deleteById(companyid);
            return true;
        }
        return false;
    }
}
